<div class="mx-auto max-w-7xl px-4 py-12 sm:py-16">
  <div class="max-w-xl mx-auto">

    <!-- Main Card -->
    <div class="bg-white rounded-2xl shadow-md border border-primary-100/50 px-6 py-12 sm:px-12">
      <!-- Header -->
      <div class="text-center mb-10">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">Health & Safety Declaration</h1>
        <p class="mt-4 text-lg text-gray-700">
          Please provide your emergency contact information and confirm your understanding.
        </p>
      </div>

      <!-- Form -->
      <%= form_with model: resource_record!,
                    url: hackathon_health_and_safeties_path,
                    local: true,
                    class: "space-y-6" do |f| %>

        <!-- Error Messages -->
        <% if resource_record!.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(resource_record!.errors.count, "error") %> prevented this from being saved:
                </h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% resource_record!.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Contact Name Field -->
        <div>
          <%= f.label :name, class: "flex items-center gap-2 mt-2 block mb-2 text-base font-bold text-gray-500" do %>
            <%= render Phlex::TablerIcons::User.new(class: "w-4 h-4") %>
            <span>Emergency Contact Name</span>
          <% end %>
          <%= f.text_field :name,
                          required: true,
                          autofocus: true,
                          placeholder: "Jane Doe",
                          class: "w-full p-2 border rounded-md shadow-sm font-medium text-sm focus:ring-2 border-gray-300 placeholder-gray-400 focus:ring-primary-500 focus:border-primary-500" %>
          <p class="text-xs text-gray-500 mt-1.5">
            Someone we can contact in case of an emergency
          </p>
        </div>

        <!-- Phone Number Field -->
        <div>
          <%= f.label :phone_number, class: "flex items-center gap-2 mt-2 block mb-2 text-base font-bold text-gray-500" do %>
            <%= render Phlex::TablerIcons::Phone.new(class: "w-4 h-4") %>
            <span>Emergency Contact Phone Number</span>
          <% end %>
          <%= f.telephone_field :phone_number,
                                required: true,
                                placeholder: "+233 XX XXX XXXX",
                                class: "w-full p-2 border rounded-md shadow-sm font-medium text-sm focus:ring-2 border-gray-300 placeholder-gray-400 focus:ring-primary-500 focus:border-primary-500" %>
          <p class="text-xs text-gray-500 mt-1.5">
            Include country code (e.g., +233)
          </p>
        </div>

        <!-- Declaration -->
        <div class="bg-primary-50/50 border border-primary-100 rounded-lg p-5">
          <h3 class="font-semibold text-gray-900 mb-3">Consent and Health Declaration</h3>
          <div class="text-sm text-gray-700 mb-4 leading-relaxed space-y-3">
            <p>
              By checking this box, I confirm that:
            </p>
            <ul class="space-y-2 ml-4">
              <li class="flex items-start">
                <span class="text-primary-600 mr-2 mt-0.5">•</span>
                <span>I am in good health and physically fit to participate in this in-person hackathon</span>
              </li>
              <li class="flex items-start">
                <span class="text-primary-600 mr-2 mt-0.5">•</span>
                <span>I have no underlying health conditions that would hinder my ability to safely engage in this event</span>
              </li>
              <li class="flex items-start">
                <span class="text-primary-600 mr-2 mt-0.5">•</span>
                <span>I understand that the event organizers are not liable for any undisclosed or pre-existing medical conditions that may arise during the hackathon</span>
              </li>
            </ul>
          </div>
          <label class="flex items-start cursor-pointer">
            <%= f.check_box :consent,
                           required: true,
                           class: "mt-1 rounded border-gray-300 text-primary-600 shadow-sm focus:ring-primary-500" %>
            <span class="ml-3 text-sm font-medium text-gray-900">
              I have read and agree to the above declaration
            </span>
          </label>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <%= f.submit "Continue",
                      class: "w-full px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
