<div class="mx-auto max-w-7xl px-4 py-12 sm:py-16">
  <div class="max-w-xl mx-auto">

    <!-- Main Card -->
    <div class="bg-white rounded-2xl shadow-md border border-primary-100/50 px-6 py-12 sm:px-12">
      <!-- Header -->
      <div class="text-center mb-10">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">Create Your Team ðŸš€</h1>
        <p class="mt-4 text-lg text-gray-700">
          Start building something amazing together. Give your team a name and select your role.
        </p>
      </div>

      <!-- Form -->
      <%= form_with model: resource_record!,
                    url: resource_url_for(::Hackathon::Team),
                    local: true,
                    class: "space-y-6" do |f| %>

        <!-- Error Messages -->
        <% if resource_record!.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(resource_record!.errors.count, "error") %> prevented this team from being created:
                </h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% resource_record!.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Team Name Field -->
        <div>
          <%= f.label :name, class: "flex items-center gap-2 mt-2 block mb-2 text-base font-bold text-gray-500" do %>
            <%= render Phlex::TablerIcons::Users.new(class: "w-4 h-4") %>
            <span>Team Name</span>
          <% end %>
          <%= f.text_field :name,
                          required: true,
                          autofocus: true,
                          placeholder: "The Innovators",
                          class: "w-full p-2 border rounded-md shadow-sm font-medium text-sm focus:ring-2 border-gray-300 placeholder-gray-400 focus:ring-primary-500 focus:border-primary-500" %>
          <p class="text-sm text-gray-500 mt-1.5">
            Choose a memorable name for your team
          </p>
        </div>

        <!-- Role Field -->
        <div>
          <%= f.label :role, class: "flex items-center gap-2 mt-2 block mb-2 text-base font-bold text-gray-500" do %>
            <%= render Phlex::TablerIcons::Briefcase.new(class: "w-4 h-4") %>
            <span>Your Role</span>
          <% end %>
          <%= f.select :role,
                      options_for_select([
                        ['Developer', 'developer'],
                        ['Designer', 'designer'],
                        ['Product', 'product'],
                        ['Marketing', 'marketing']
                      ]),
                      { include_blank: 'Select your role' },
                      required: true,
                      class: "w-full p-2 border rounded-md shadow-sm font-medium text-sm focus:ring-2 border-gray-300 focus:ring-primary-500 focus:border-primary-500" %>
          <p class="text-sm text-gray-500 mt-1.5">
            Your role on the team
          </p>
        </div>

        <!-- Info Box -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <p class="text-sm text-blue-800 font-semibold mb-1">What happens next?</p>
              <ul class="text-sm text-blue-700 space-y-1 list-disc list-inside">
                <li>You'll be set as the team lead</li>
                <li>You can invite members to join your team</li>
                <li>Your team can start collaborating on projects</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <%= f.submit "Create Team",
                      class: "w-full rounded-xl bg-gradient-to-r from-primary-600 to-primary-500 px-6 py-4 text-lg font-semibold text-white shadow-md transition-all duration-300 ease-out hover:translate-y-[-2px] hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
