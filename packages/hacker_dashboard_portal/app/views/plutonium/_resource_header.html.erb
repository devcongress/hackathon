<%= render Plutonium::UI::Layout::Header.new do |header| %>
  <% header.with_brand_logo do %>
    <%= inline_svg_tag(resource_logo_asset, class: "h-12 dark:text-white") %>
  <% end %>

  <% header.with_action do %>
    <%= render Plutonium::UI::ColorModeSelector.new %>
    <%=
      render Plutonium::UI::NavUser.new(
               name: current_user&.profile&.name,
               email: current_user&.email,
             ) do |nav|
        if current_user.profile
          nav.with_section do |section|
            section.with_link(
              label: 'My profile',
              href: resource_url_for(current_user.profile),
            )
          end
        end

        if current_user.team
          nav.with_section do |section|
            section.with_link(
              label: 'My team',
              href: resource_url_for(current_user.team),
            )
          end
        end

        nav.with_section do |section|
          section.with_link(
            label: 'Sign out',
            href: logout_url,
            class: 'rounded-b-lg',
            data: {
              turbo: false,
            },
          )
        end
      end
    %>
  <% end %>
<% end %>
